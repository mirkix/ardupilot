# hw definition file for processing by chibios_hwdef.py
# UAV-DEV GmbH HAT for RPI

AUTOBUILD_TARGETS None

# MCU class and specific type
MCU STM32H7xx STM32H743xx

# crystal frequency
OSCILLATOR_HZ 24000000

STM32_ST_USE_TIMER 5

# board ID for firmware load
APJ_BOARD_ID 5220

# the nucleo seems to have trouble with flashing the last sector?
FLASH_SIZE_KB 2048

# bootloader is installed at zero offset
FLASH_RESERVE_START_KB 128

# the location where the bootloader will put the firmware
# the H755 has 128k sectors
FLASH_BOOTLOADER_LOAD_KB 128

# use last 2 pages for flash storage
# H743 has 16 pages of 128k each
define HAL_STORAGE_SIZE 32768
STORAGE_FLASH_PAGE 14

define HAL_SPI_CHECK_CLOCK_FREQ

# supports upto 8MBits/s
CANFD_SUPPORTED 8

PA11 OTG_FS_DM OTG1
PA12 OTG_FS_DP OTG1

PA13 JTMS-SWDIO SWD
PA14 JTCK-SWCLK SWD

# ADC
PC0 VDD_5V_SENS ADC1 SCALE(2.75)
PC4 BATT_VOLTAGE_SENS ADC1 SCALE(1)

# order of UARTs
# SERIAL0 USB
# SERIAL1 USART3 J1
# SERIAL2 USART6 J2
# SERIAL3 UART4  J3
# SERIAL4 UART7  J4
# SERIAL5 UART8 RCIN
# SERIAL6 USART2 RPI

# order of UARTs (and USB)
SERIAL_ORDER OTG1 USART3 USART6 UART4 UART7 UART8 USART2 OTG2

# J1 USART3
PB10 USART3_TX USART3 SPEED_HIGH
PB11 USART3_RX USART3 SPEED_HIGH

# J2 USART6
PG14 USART6_TX USART6 SPEED_HIGH
PG9  USART6_RX USART6 SPEED_HIGH

# J3 UART4 
PB15 UART4_CTS UART4
PB14 UART4_RTS UART4
PD1  UART4_TX  UART4 SPEED_HIGH
PH14 UART4_RX  UART4 SPEED_HIGH

# J4 UART7
PE10 UART7_CTS UART7
PE9  UART7_RTS UART7
PE8  UART7_TX  UART7 SPEED_HIGH
PE7  UART7_RX  UART7 SPEED_HIGH

# RCIN UART8
PE1  UART8_TX  UART8 SPEED_HIGH
PE0  UART8_RX  UART8 SPEED_HIGH

# RPI USART2
PD3 USART2_CTS USART2
PD4 USART2_RTS USART2
PD5 USART2_TX  USART2 SPEED_HIGH
PD6 USART2_RX  USART2 SPEED_HIGH

# setup the pins for the microSD card
PC8  SDMMC1_D0 SDMMC1
PC9  SDMMC1_D1 SDMMC1
PC10 SDMMC1_D2 SDMMC1
PC11 SDMMC1_D3 SDMMC1
PC12 SDMMC1_CK SDMMC1
PD2  SDMMC1_CMD SDMMC1

# QUADSPI
PF8  QUADSPI_BK1_IO0 QUADSPI1
PF9  QUADSPI_BK1_IO1 QUADSPI1
PF7  QUADSPI_BK1_IO2 QUADSPI1
PF6  QUADSPI_BK1_IO3 QUADSPI1
PG6  QUADSPI_BK1_NCS QUADSPI1
PF10 QUADSPI_CLK     QUADSPI1
EXT_FLASH_SIZE_MB 32
INT_FLASH_PRIMARY 1

# FDCAN Bus 1
PB7 GPIO_CAN1_SILENT OUTPUT PUSHPULL SPEED_LOW LOW
PB9 CAN1_TX CAN1
PB8 CAN1_RX CAN1

# FDCAN Bus 2
PB4 GPIO_CAN2_SILENT OUTPUT PUSHPULL SPEED_LOW LOW
PB6 CAN2_TX CAN2
PB5 CAN2_RX CAN2

# PWM Output
PK1  TIM1_CH1 TIM1 PWM(1)  GPIO(50)
PJ11 TIM1_CH2 TIM1 PWM(2)  GPIO(51)
PA10 TIM1_CH3 TIM1 PWM(3)  GPIO(52)
PE14 TIM1_CH4 TIM1 PWM(4)  GPIO(53)
PA0  TIM2_CH1 TIM2 PWM(5)  GPIO(54)
PA1  TIM2_CH2 TIM2 PWM(6)  GPIO(55)
PC6  TIM3_CH1 TIM3 PWM(7)  GPIO(56)
PC7  TIM3_CH2 TIM3 PWM(8)  GPIO(57)
PB0  TIM3_CH3 TIM3 PWM(9)  GPIO(58)
PB1  TIM3_CH4 TIM3 PWM(10) GPIO(59)
PI5  TIM8_CH1 TIM8 PWM(11) GPIO(60)
PI6  TIM8_CH2 TIM8 PWM(12) GPIO(61)

# PWM RCIN
PD12 TIM4_CH1 TIM4 RCININT PULLDOWN LOW # also USART8_RX for serial RC

# LEDs
define AP_NOTIFY_GPIO_LED_RGB_ENABLED 1 
PI4  LED_RED OUTPUT LOW GPIO(0)
PG10 LED_GREEN OUTPUT LOW GPIO(1) 
PK5  LED_BLUE OUTPUT LOW GPIO(2) 
define AP_NOTIFY_GPIO_LED_RGB_RED_PIN 0 
define AP_NOTIFY_GPIO_LED_RGB_GREEN_PIN 1 
define AP_NOTIFY_GPIO_LED_RGB_BLUE_PIN 2 

# I2C
I2C_ORDER I2C2 I2C4
define HAL_I2C_INTERNAL_MASK 1
PF1 I2C2_SCL I2C2
PF0 I2C2_SDA I2C2

PF14 I2C4_SCL I2C4
PF15 I2C4_SDA I2C4

# Enable FAT filesystem support (needs a microSD defined via SDMMC).
define HAL_OS_FATFS_IO 1

define HAL_SPI_CHECK_CLOCK_FREQ

# SPI1
PG11 SPI1_SCK  SPI1
PA6  SPI1_MISO SPI1
PD7  SPI1_MOSI SPI1
PA3 ICM4288_CS CS # CS1

# SPI2
PI1 SPI2_SCK  SPI2
PI2 SPI2_MISO SPI2
PI3 SPI2_MOSI SPI2
PJ3 BMI088_G_CS CS # CS1
PJ4 BMI088_A_CS CS # CS2

# SPI4
PE2 SPI4_SCK  SPI4
PE5 SPI4_MISO SPI4
PE6 SPI4_MOSI SPI4
PD9 DPS310_CS CS   # CS1

# SPI5
PK0  SPI5_SCK  SPI5
PH7  SPI5_MISO SPI5
PJ10 SPI5_MOSI SPI5
PF2 ICP20100_CS CS  # CS1

# SPI devices
SPIDEV icm42688 SPI1 DEVID1 ICM4288_CS   MODE3  1*MHZ  4*MHZ
SPIDEV bmi088_g SPI2 DEVID1  BMI088_G_CS MODE3 10*MHZ 10*MHZ
SPIDEV bmi088_a SPI2 DEVID2  BMI088_A_CS MODE3 10*MHZ 10*MHZ
SPIDEV dps310   SPI4 DEVID1  DPS310_CS   MODE3  5*MHZ  5*MHZ
SPIDEV icp20100 SPI4 DEVID3  ICP20100_CS MODE0  1*MHZ  4*MHZ

# IMU
IMU Invensensev3 SPI:icm42688 ROTATION_PITCH_180_YAW_270
IMU BMI088 SPI:bmi088_a SPI:bmi088_g ROTATION_ROLL_180

# compass
COMPASS BMM350 I2C:0:0x14 false ROTATION_YAW_90
COMPASS BMM150 I2C:0:0x10 false ROTATION_YAW_90

# barometer
BARO DPS310 SPI:dps310
# BARO ICP201XX SPI:icp20100

# bootloader embedding / bootloader flashing not available
define AP_BOOTLOADER_FLASHING_ENABLED 1
